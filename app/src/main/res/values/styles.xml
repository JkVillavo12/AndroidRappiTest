<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--item RadioButton or CheckBox color-->
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/primary_dark</item>
        <!--item text color-->
        <item name="textColorAlertDialogListItem">@android:color/black</item>
        <!--buttons color-->
        <item name="colorAccent">@color/primary_dark</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/background_dialog</item>
    </style>


    <style name="mm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="mm.vert">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="mw">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mw.hori">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ww.hori">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="mw.vert">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="mm.marginHoriz">
        <item name="android:layout_marginLeft">@dimen/margin_M</item>
        <item name="android:layout_marginRight">@dimen/margin_M</item>
    </style>

    <style name="mm.marginAll">
        <item name="android:layout_marginLeft">@dimen/margin_S</item>
        <item name="android:layout_marginRight">@dimen/margin_S</item>
        <item name="android:layout_marginTop">@dimen/margin_S</item>
        <item name="android:layout_marginBottom">@dimen/margin_S</item>
    </style>

    <style name="mw.qualify">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


</resources>
